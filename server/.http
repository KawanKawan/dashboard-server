# POST /user/update
POST {{host}}/user/update
content-type: application/json

{
    "userID":"1078844444",
    "name":"zzk",
    "phone":99999999,
    "payment": "CASH"
}

### get all payment of the user
# GET /user/:userid
GET {{host}}/payment/1078844444


### add payment
# POST /payment/add
POST {{host}}/payment/add
content-type: application/json

{
    "id":"test_payload",
    "request_from":"321",
